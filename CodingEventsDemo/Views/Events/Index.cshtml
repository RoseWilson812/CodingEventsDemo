
<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}
else
{
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
    </tr>
    @* was for dictionary- now uses a List
        @foreach (var evt in ViewBag.events)
        {
            <tr>
                <td>@evt.Key</td>
                <td>@evt.Value</td>
            </tr>
        } *@
    @foreach (var evt in ViewBag.events)
    {
        <tr>
            <td>@evt.Name</td>
            <td>@evt.Description</td>
        </tr>
    }
</table>
}

